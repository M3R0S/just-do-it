{
    "compilerOptions": {
        "outDir": "./dist/",
        "baseUrl": "./src",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "module": "ESNext",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": ["node_modules", ".vscode/**/*"],
    "include": ["./src/**/*.ts", "./src/**/*.tsx"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
